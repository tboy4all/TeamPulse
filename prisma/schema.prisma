generator client {
 provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  password  String      // For simplicity, weâ€™ll store plain text or hash manually
  teams     Team[]      @relation("TeamMembers")
  sentiments Sentiment[] @relation("UserSentiments")
  createdAt DateTime    @default(now())
}

model Team {
  id         String    @id @default(cuid())
  name       String
  members    User[]    @relation("TeamMembers")
  sentiments Sentiment[]
  createdAt  DateTime  @default(now())
}
model Sentiment {
  id        String   @id @default(cuid())
  value     SentimentType
  user      User     @relation("UserSentiments", fields: [userId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])
  userId    String
  teamId    String
  createdAt DateTime @default(now())

   @@unique([userId, teamId]) // ðŸ‘ˆ ensures only one sentiment per user/team
}

enum SentimentType {
  HAPPY
  NEUTRAL
  SAD
}


model AppSettings {
  id               String           @id @default(cuid())
  checkInsEnabled  Boolean          @default(true)
  checkInFrequency CheckInFrequency
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
}

enum CheckInFrequency {
  DAILY
  WEEKLY
  MONTHLY
}
